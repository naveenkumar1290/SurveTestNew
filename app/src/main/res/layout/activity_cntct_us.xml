<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/dcdc_bg"
    android:orientation="vertical"
    xmlns:mlns="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:text="info@dcdc.co.in"
        android:autoLink="email"
        android:linksClickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Deep Health Care - Corporate"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="HEAD QUARTERS FOR DEEP CHAND DIALYSIS CENTRE "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="B-22 NEW MULTAN NAGAR,\nNEW DELHI-110056,"/>
    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:autoLink="phone"
        android:linksClickable="true"
        android:textColor="@color/colorPrimary"
        android:text="011-45581006"/>

</LinearLayout>

